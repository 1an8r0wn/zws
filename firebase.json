{
  "firestore": {
    "indexes": "firestore.indexes.json",
    "rules": "firestore.rules"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint --fix"
    ]
  },
  "hosting": {
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "predeploy": "cd public && npm run build",
    "public": "public/build",
    "rewrites": [
      {
        "function": "getURL",
        "source": "**"
      }
    ]
  }
}
